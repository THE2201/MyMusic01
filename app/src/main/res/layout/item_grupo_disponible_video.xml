<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bordes"
    android:padding="15dp">

    <TextView
        android:id="@+id/id_grupov_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/caratula_grupov_disp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/groups_24" />

    <TextView
        android:id="@+id/titulo_vdisponible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_toStartOf="@+id/bt_entrar_grupov"
        android:layout_toEndOf="@+id/caratula_grupov_disp"
        android:layout_weight="1"
        android:text="Mi grupo Video"
        android:textColor="#673AB7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/autor_gvideo"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@+id/titulo_vdisponible"
        android:layout_alignStart="@+id/titulo_vdisponible"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="JorgeMusic"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/bt_entrar_grupov"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:backgroundTint="#00AF07"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/entrar_grupo_24" />

    <TextView
        android:id="@+id/cantidad_videos_disp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autor_gvideo"
        android:layout_alignStart="@+id/autor_gvideo"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="5 Videos"
        android:textSize="12sp" />

</RelativeLayout>
