<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/id_migrupov_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/caratula_grupov"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/groups_24" />

    <TextView
        android:id="@+id/titulo_migrupov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/bt_salir_gvideo"
        android:layout_toEndOf="@+id/caratula_grupov"
        android:layout_weight="1"
        android:text="Mi grupo Video"
        android:textColor="#673AB7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/miembros_gvideo"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@+id/titulo_migrupov"
        android:layout_alignStart="@+id/titulo_migrupov"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="20 Miembros"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/bt_salir_gvideo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#E91E63"
        android:scaleType="fitCenter"
        android:src="@drawable/salir_gaudio_24" />

    <TextView
        android:id="@+id/cantidad_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miembros_gvideo"
        android:layout_alignStart="@+id/miembros_gvideo"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:text="5 Videos"
        android:textSize="12sp" />

</RelativeLayout>
